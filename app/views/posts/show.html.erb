<h1><%= @post.title %></h1>
<h1><%= @post.body %></h1>
<hr>
<%= link_to 'Edit', edit_post_path(@post), class:"btn btn-primary" %>
<%= link_to 'Delete', post_path(@post), method: :delete, data:{confirm: "Are you sure?"}, class: "btn btn-danger" %>

<hr>
<h4>Comments</h4>
<% @post.comments.each do |comment| %>
<div class="well">
    <p><strong><%= comment.username %></strong> : <%= comment.body%> <%= link_to 'X', [comment.post, comment], method: :delete, data: {confirm: "Are you sure?"}%></p>
    
</div>
<% end %>
<h4>Add comment</h4>

<%= form_for([@post, @post.comments.build]) do |f| %>
    <p>
        <%= f.label :username %> <br>
        <%= f.text_field :username %>
    </p>
    <p>
        <%= f.label :body %> <br>
        <%= f.text_area :body %>
    </p>
    <p>
        <%= f.submit %>
    </p>
<% end %>